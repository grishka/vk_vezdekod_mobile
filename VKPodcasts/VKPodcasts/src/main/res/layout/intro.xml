<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
	android:gravity="center"
	android:padding="32dp">

	<ImageView
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginBottom="16dp"
		android:src="@drawable/ic_add_circle_outline_28"
		android:tint="@color/lightIconSecondary"
		android:scaleType="fitXY"/>
	
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="@style/title"
		android:gravity="center"
		android:text="Добавьте первый подкаст"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:textAppearance="@style/grayText"
		android:gravity="center"
		android:text="Добавляйте, редактируйте и делитесь подкастами вашего сообщества."/>

	<Button
		android:id="@+id/button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="32dp"
		android:text="Добавить подкаст"/>

</LinearLayout>