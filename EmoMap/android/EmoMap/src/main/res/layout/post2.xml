<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#fff">

	<ImageView
		android:id="@+id/ava"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginTop="14dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="12dp"
		android:src="@drawable/ava2"/>

	<TextView
		android:id="@+id/name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/ava"
		android:layout_marginTop="19dp"
		android:textSize="15dp"
		android:fontFamily="sans-serif-medium"
		android:textColor="#000"
		android:text="Игорь"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/name"
		android:layout_toRightOf="@id/ava"
		android:layout_marginTop="1dp"
		android:textSize="14dp"
		android:textColor="#818C99"
		android:text="только что"/>
	
	<ImageView
		android:layout_width="36dp"
		android:layout_height="48dp"
		android:layout_alignParentRight="true"
		android:layout_margin="4dp"
		android:scaleType="center"
		android:src="@drawable/ic_more"/>

	<TextView
		android:id="@+id/text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/ava"
		android:layout_marginHorizontal="16dp"
		android:layout_marginTop="12dp"
		android:textSize="15dp"
		android:textColor="#000"
		android:text="«Убийство Роджера Экройда» (англ. The Murder of Roger Ackroyd) — детективный роман Агаты Кристи, опубликованный в 1926 году. Является шестым изданным романом писательницы и третьим, в котором фигурирует детектив Эркюль Пуаро. "/>

	<View
		android:id="@+id/separator"
		android:layout_below="@id/text"
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_marginTop="16dp"
		android:layout_marginHorizontal="16dp"
		android:background="@color/separator"/>

	<TextView
		android:id="@+id/like"
		android:layout_width="wrap_content"
		android:layout_height="44dp"
		android:layout_below="@id/separator"
		android:textColor="#818C99"
		android:textSize="14dp"
		android:fontFamily="sans-serif-medium"
		android:gravity="center"
		android:paddingHorizontal="16dp"
		android:drawableLeft="@drawable/ic_like"
		android:drawablePadding="4dp"
		android:text="65"/>

	<TextView
		android:id="@+id/comment"
		android:layout_width="wrap_content"
		android:layout_height="44dp"
		android:layout_below="@id/separator"
		android:layout_toRightOf="@id/like"
		android:textColor="#818C99"
		android:textSize="14dp"
		android:fontFamily="sans-serif-medium"
		android:gravity="center"
		android:paddingHorizontal="16dp"
		android:drawableLeft="@drawable/ic_comment"
		android:drawablePadding="4dp"
		android:text="19"/>

	<TextView
		android:id="@+id/share"
		android:layout_width="wrap_content"
		android:layout_height="44dp"
		android:layout_below="@id/separator"
		android:layout_toRightOf="@id/comment"
		android:textColor="#818C99"
		android:textSize="14dp"
		android:fontFamily="sans-serif-medium"
		android:gravity="center"
		android:paddingHorizontal="16dp"
		android:drawableLeft="@drawable/ic_share"
		android:drawablePadding="4dp"
		android:text="3"/>

	<TextView
		android:id="@+id/views"
		android:layout_width="wrap_content"
		android:layout_height="44dp"
		android:layout_below="@id/separator"
		android:layout_alignParentRight="true"
		android:textColor="#A8ADB2"
		android:textSize="14dp"
		android:gravity="center"
		android:paddingHorizontal="16dp"
		android:drawableLeft="@drawable/ic_views"
		android:drawablePadding="4dp"
		android:text="26K"/>
	
	<View
		android:layout_width="match_parent"
		android:layout_height="8dp"
		android:layout_below="@id/like"
		android:background="#EBEDF0"/>

</RelativeLayout>