<resources>
	<style name="AppTheme" parent="Theme.AppKit.Light">
		<item name="android:statusBarColor">@color/background</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="android:windowLightNavigationBar">true</item>
		<item name="android:windowBackground">@color/background</item>
		<item name="android:actionBarTheme">@style/AppTheme.Toolbar</item>
		<item name="android:buttonStyle">@style/AppTheme.Button</item>
		<item name="android:imageButtonStyle">@style/AppTheme.Button.ImageButton</item>
		<item name="android:editTextStyle">@style/AppTheme.EditText</item>
		<item name="android:spinnerStyle">@style/AppTheme.Spinner</item>
		<item name="android:checkboxStyle">@style/AppTheme.Checkbox</item>
		<item name="android:textColorPrimary">@color/textPrimary</item>
		<item name="android:textColorSecondary">@color/textSubhead</item>
		<item name="android:navigationBarColor">@color/navBar</item>
		<item name="android:colorAccent">@color/accent</item>
		<item name="android:textColorHint">@color/placeholder</item>
		<item name="android:datePickerDialogTheme">@android:style/Theme.Material.Light.Dialog.Alert</item>
		<item name="android:colorControlNormal">@color/lightIconTertiary</item>
		<item name="android:colorEdgeEffect">@color/accent</item>
	</style>

	<style name="AppTheme.Toolbar" parent="android:Widget.Material.ActionBar">
		<item name="android:colorPrimary">@color/background</item>
		<item name="android:titleTextAppearance">@style/AppTheme.Toolbar.TitleText</item>
	</style>

	<style name="AppTheme.Toolbar.TitleText" parent="android:TextAppearance.Material.Widget.Toolbar.Title">
	</style>

	<style name="AppTheme.Button" parent="android:Widget.Material.Button">
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">#FFF</item>
		<item name="android:background">@drawable/button</item>
		<item name="android:minHeight">20dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:paddingTop">7.5dp</item>
		<item name="android:paddingBottom">8.5dp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:fontFamily">sans-serif-medium</item>
		<item name="android:stateListAnimator">@animator/button</item>
	</style>

	<style name="AppTheme.Button.Outlined">
		<item name="android:textColor">@color/accent</item>
		<item name="android:background">@drawable/outlined_button</item>
	</style>

	<style name="AppTheme.Button.ImageButton">
		<item name="android:padding">0dp</item>
	</style>

	<style name="AppTheme.EditText" parent="android:Widget.Material.Light.EditText">
		<item name="android:background">@drawable/edit_text</item>
		<item name="android:padding">12dp</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">@color/textPrimary</item>
	</style>

	<style name="AppTheme.Spinner" parent="android:Widget.Material.Light.Spinner">
		<item name="android:background">@drawable/spinner</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
	</style>

	<style name="AppTheme.Checkbox" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
		<item name="android:textSize">16dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
		<item name="android:paddingStart">7dp</item>
	</style>
	
	<!-- Text appearances -->

	<style name="title">
		<item name="android:textSize">20dp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>

	<style name="textPrimary">
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">#000</item>
	</style>

	<style name="grayText">
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">#818C99</item>
	</style>

	<style name="formFieldLabel">
		<item name="android:textSize">14dp</item>
		<item name="android:textColor">@color/textSubhead</item>
	</style>
	
	<style name="headlineRegular">
		<item name="android:textSize">16dp</item>
	</style>
	
	<style name="caption4Regular">
		<item name="android:textSize">9dp</item>
		<item name="android:textColor">@color/lightIconSecondary</item>
	</style>

	<style name="caption3Regular">
		<item name="android:textSize">11dp</item>
		<item name="android:textColor">@color/placeholder</item>
	</style>

	<style name="caption1Regular">
		<item name="android:textSize">13dp</item>
		<item name="android:textColor">@color/placeholder</item>
	</style>
</resources>
